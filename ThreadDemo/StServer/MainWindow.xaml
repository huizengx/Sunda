<Window x:Class="StServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StServer"
        mc:Ignorable="d"
        Title="StServer" Height="400" Width="600">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel >
            <ListBox x:Name="listBoxInfo" Height="180"></ListBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <ListBox x:Name="listBoxMsg" Height="180"></ListBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="bntCancel" Click="bntCancel_Click">CancelJob</Button>
        </StackPanel>
        
    </Grid>
</Window>
